; mult14.a
; from codebase64 by AackAsser/Instinct: https://codebase64.org/doku.php?id=base:seriously_fast_multiplication
;
; 8 bit x 8 bit unsigned multiply, 16 bit result
; Average cycles: 45.99
; 2077 bytes


PRODUCT = $03

* = $200

; Tables must be aligned to page boundary
square1_low
    !for i, 0, 511 {
        !byte <((i*i)/4)
    }
square1_high
    !for i, 0, 511 {
        !byte >((i*i)/4)
    }

square2_low
    !for i, 0, 511 {
        !byte <(((i-255)*(i-255))/4)
    }
square2_high
    !for i, 0, 511 {
        !byte >(((i-255)*(i-255))/4)
    }

; ----------------------------------------------------------------------------------
; multiplies A*X
; result is in Y (low byte) and A (high byte)
mult
    sta sm1
    sta sm3
    eor #$ff
    sta sm2
    sta sm4

    sec
sm1 = * + 1
    lda square1_low,x
sm2 = * + 1
    sbc square2_low,x
    tay
sm3 = * + 1
    lda square1_high,x
sm4 = * + 1
    sbc square2_high,x
    rts
